<section class="login-form">
  <% if show_sign_in_error?(alert) %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      E-mail ou senha invÃ¡lidos

      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Entrar</h2>

    <div class="field form-group">
      <%= f.label :email, 'E-mail' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :password, 'Senha' %><br />
      <%= f.password_field :password, autocomplete: 'current-password', required: true, class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group justify-content-between flex-display">
        <div class="form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, 'Lembrar', class: 'form-check-label' %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit 'Entrar', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <div class="text-center">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Criar uma conta", new_registration_path(resource_name), class: 'authentication-link' %>
    <% end %>
  </div>
</section>
