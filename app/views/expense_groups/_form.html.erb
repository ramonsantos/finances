<%= form_with(model: expense_group, local: true) do |form| %>
  <div class="inline-form">
    <div class="field">
      <%= form.text_field :name, required: true, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit('Salvar', class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>
