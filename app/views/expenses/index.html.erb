<% if notice %>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="col-sm-12">
  <h1>Despesas - <%= month_label(:current) %> </h1>
</div>

<div class="col-md-12">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Descrição</th>
          <th scope="col">Valor</th>
          <th scope="col">Data</th>
          <th scope="col">Fixo?</th>
          <th scope="col">Categoria</th>
          <th scope="col">Local</th>
          <th scope="col">Grupo</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <td scope="row"><%= expense.description %></td>
            <td><%= format_to_money(expense.amount) %></td>
            <td><%= expense.date %></td>
            <td><%= fixed_label(expense.fixed) %></td>
            <td><%= Expense.categories[expense.category] %></td>
            <td><%= expense.place.name %></td>
            <td><%= expense.expense_group.name %></td>
            <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
            <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

