<section class="col-md-12">
  <%= render('layouts/shared/notice', message: notice) if notice %>

  <%= render(
    'expenses_title',
    current_expense_month: @current_expense_month,
    switch_page_to: 'Relatório de Despesas',
    switch_page_path: :report_expenses_path,
    switch_month_path: :expenses_path)
  %>

  <div>
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Descrição</th>
            <th scope="col">Valor</th>
            <th scope="col">Data</th>
            <th scope="col">Fixo?</th>
            <th scope="col">Categoria</th>
            <th scope="col">Local</th>
            <th scope="col">Grupo</th>
            <th scope="col">Observações</th>
            <th scope="col" colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @expenses.each do |expense| %>
            <tr>
              <td scope="row"><%= expense.description %></td>
              <td class="td-right"><%= number_to_currency(expense.amount) %></td>
              <td class="td-right"><%= I18n.l(expense.date, default: '') %></td>
              <td class="td-center"><%= fixed_label(expense.fixed) %></td>
              <td><%= expense.expense_category.name %></td>
              <td><%= expense.place.name %></td>
              <td><%= expense.expense_group.name %></td>
              <td><%= remark_preview(expense.remark) %></td>
              <td class="td-center"><%= link_to t('views.app.button.edit'), expense_path(expense, expense_month: month_param(@current_expense_month)), class: 'btn btn-primary btn-sm' %></td>
              <td class="td-center"><%= link_to t('views.app.button.remove'), expense_path(expense, expense_month: month_param(@current_expense_month)), method: :delete, data: { confirm: t('views.app.dialog.confirm') }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
    <h3>Total de Despesas: <%= number_to_currency(@total_expense_amount) %></h3>

    <%= paginate @expenses %>
  </div>
</section>
