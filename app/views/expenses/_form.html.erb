<%= form_with(model: expense, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, oninput: only_numbers_script, required: true %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :fixed %>
    <%= form.check_box :fixed %>
  </div>

  <div class="field">
    <%= form.label :remark %>
    <%= form.text_area :remark %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Expense.categories.values, selected: Expense.categories[expense.category] %>
  </div>

  <div class="field">
    <%= form.label :place_id %>
    <%= form.select :place_id, @places, selected: (expense.place_id || @places.first) %>
  </div>

  <div class="field">
    <%= form.label :expense_group_id %>
    <%= form.select :expense_group_id, @expense_groups, selected: (expense.expense_group_id || @expense_groups.first) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
